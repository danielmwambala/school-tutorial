<h1>Listing all the students</h1>

<p><%= notice %></p>

<p><%= link_to "Create a new student", new_student_path %></p>

<table>
    <thead>
        <th>First name</th>
        <th>Last name</th>
        <th>Email address</th>
        <th>Actions</th>        
        <th>Edit</th>        
        <th>Delete</th>        
    </thead>
    <tbody>
    <% @students.each do |student| %>
        <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><%= link_to 'View', student %></td>            
            <td><%= link_to 'Edit', edit_student_path(student) %></td>            
            <td><%= link_to 'Delete', student, data: {method: :delete, confirm: 'Are you sure?'} %></td>            
        </tr>
    <% end %>
    </tbody>
</table>
<%= form_with model: @student do |form| %>

    <% if @student.errors.any? %>
        <% @student.errors.full_messages.each do |message| %>
            <p><%= message %></p>
        <% end %>
    <% end %>

    <div>
        <%= form.label :first_name%><br>
        <%= form.text_field :first_name%>
    </div>
    <div>
        <%= form.label :last_name%><br>
        <%= form.text_field :last_name%>
    </div>
    <div>
        <%= form.label :email_address%><br>
        <%= form.email_field :email%>
    </div>
    <div>
        <%= form.label :phone_number%><br>
        <%= form.text_field :phone_number%>
    </div>
    <div>
        <%= form.label :address%><br>
        <%= form.text_field :address%>
    </div>
    <div>
        <%= form.label :contact_number%><br>
        <%= form.text_field :contact_number%>
    </div>
    <div>
        <%= form.label :date_of_birth%><br>
        <%= form.text_field :date_of_birth%>
    </div>
    <div>
        <%= form.label :grade%><br>
        <%= form.number_field :grade%>
    </div>
    <div>
        <br>
        <%= form.submit %>
    </div>

    <p><%= link_to "Back", students_path %></p>
<% end %>